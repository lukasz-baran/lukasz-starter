    <bean name="retryInterceptor"
          class="com.sabre.ems.dao.HibernateRetryInterceptor">
        <property name="retries" value="3"/>
        <property name="sleepBetweenRetries" value="3"/>
    </bean>
-->

    <bean name="przewoznikDAO" class="com.lukaszbaran.starter.dao.impl.PrzewoznikDAO">
        <constructor-arg ref="annotatedSessionFactory"/>
    </bean>


</beans>
